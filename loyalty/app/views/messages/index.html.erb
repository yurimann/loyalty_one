<!-- checks if user is logged in -->
<% if current_user %>
<!-- This is where the parent message ID variable is stored -->
  <input type="hidden" class="parent_message_id" id="master" value="">
  <input type="hidden" id="tab" value="">
  <input type="hidden" id="lng" value="">
  <input type="hidden" id="lat" value="">
  <input type="hidden" id="city" value="">
  <input type="hidden" id="weather" value="">
  <input type="hidden" id="location" value="<%= current_user.location %>">
  <script type="text/javascript">

    var userId = <%= current_user.id  %>
    var author = "<%= current_user.username %>"
    <% if Message.last != nil %>
      var lastMessageId = <%= Message.last.id %>
    <% else %>
      var lastMessageId = 1
    <% end %>
  </script>
  <% if current_user.messages.any? %>
    <h2 class="view-messages">View all my messages</h2>
  <% end %>
  <h2 class="new-message">New Message</h2>

  <!-- Renders message form when user clicks new message or reply -->
  <div class="show">
    <%= render 'form' %>
  </div>
<% else %>
  <h2>Please log in to post a message</h2>
<% end %>
<div class="board">
  <% @messages.each do |message| %>
    <div class="box" style="margin-left: <%= message.tabify %>%">
      <div class="text">
        <p><%= message.memo %></p>
      </div>
      <div class="data">
        <p>Author: <%= User.find(message.user_id).username %></p>
        <p><%= message.city %></p>
        <p>longtitude: <%= message.lng %></p>
        <p>latitude: <%= message.lat %></p>
        <p>Temperature: <%= message.weather %>CÂ°</p>
      </div>
      <div class="reply-box">
        <% if current_user %>
          <input type="hidden" class="parent_message_id" value="<%= message.id %>">
          <p class="reply">Reply</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Display current users messages -->
<% if current_user %>
  <div class="message-modal">
    <% current_user.messages.each do |msg| %>
      <div class="box">
        <div class="text">
          <%= msg.memo %>
        </div>
        <div class="post-date">
          <%= msg.created_at.in_time_zone("Eastern Time (US & Canada)") %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
